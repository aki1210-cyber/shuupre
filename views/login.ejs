<!DOCTYPE html>
<html>
  <head>
    <title>ログイン</title>
    <link rel='stylesheet' href='/stylesheets/login.css' />
  </head>
  <body>
    <div class="logo_area">
      <a href="/"><img src="/images/logo.jpg" alt="ロゴ"></a>
    </div>
    <form class="form" action="/login/auth" method="post">
      <div class="username">
        <input type="text" placeholder="MAILADDRESS" name="mailaddress"/>
      </div>
      <div class="password">
        <input type="text" placeholder="PASSWORD" name="password"/>
      </div>
      <div class="login">
        <input type="submit" value="LOGIN" name="submit">
      </div>
    </form>
  </body>
</html>
